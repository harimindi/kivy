ScreenManagement:
    MainScreen:
    TestScreen:
    IDScreen:
    PassportScreen:
<BG@FloatLayout>:
    canvas:
        Color: 
            rgba: (0.48, .09, 0.32, 1)
        Rectangle:
            pos: self.pos
            size: self.size   
<FieldName@Label>:
    #background_color:
    canvas.before:
        Color:
            rgba: 1,1,1,1
        #Line:
            #width: 2
            #color: 1,1,1,1
            #rectangle: self.x, self.y, self.width, self.height
        RoundedRectangle:
            pos: self.pos
            size: self.size
    color: 0,0,0,1
    font_size: 20
    size_hint: (.3, .05)
<FieldInput@TextInput>:
    background: 1., 1., 1., 1.
    font_size: 14
    multiline: False
    size_hint: (.4, .05)
<MyBtn@Button>:
    background_normal:
    background_color: 0,0,0,0
    canvas.before:
        Color:
            rgba: (0,0.5,0.4,1) if self.state == 'normal' else (0.8,0.6,0,1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [30,]
    size_hint: (.25, .1)
    color: 1,1,1,1
    font_size: 20
#<DatePicker>:
    #pHint: .5, .5
<MainScreen>:
    name: "Main_Screen"
    BG:
        FieldName:
            id: lbl_FirstName
            pos_hint: {'x':.1, 'y':.85}
            text: 'First Name'
        FieldName:
            id: lbl_LastName
            pos_hint: {'x':.1, 'y':.75}
            text: 'Last Name'
        FieldName:
            id: lbl_DOB
            pos_hint: {'x':.1, 'y':.65}
            text: 'Date of Birth'
        FieldName:
            id: lbl_ID1
            pos_hint: {'x':.1, 'y':.45}
            text: 'Passport Number'
        FieldName:
            id: lbl_Nationality
            pos_hint: {'x':.1, 'y':.55}
            text: 'Nationality'
        FieldName:
            id: lbl_ID2
            pos_hint: {'x':.1, 'y':.35}
            text: 'Address'                    
        FieldInput:
            id: txt_FirstName
            pos_hint: {'x':.45, 'y':.85}
        FieldInput:
            id: txt_LastName
            pos_hint: {'x':.45, 'y':.75}
        FieldInput:
            id: txt_DOB
            pos_hint: {'x':.45, 'y':.65}
        FieldInput:
            id: txt_PassportNum
            pos_hint: {'x':.45, 'y':.55}   
        FieldInput:
            id: txt_Nationality
            pos_hint: {'x':.45, 'y':.45}
        FieldInput:
            id: txt_Address
            pos_hint: {'x':.45, 'y':.25}
            size_hint: (.4, .15)
        MyBtn:
            id: btn_MainScreen_next
            text: "NEXT"
            pos_hint: {'x':.30, 'y':.10}
            on_release: app.root.current = "ID_Screen"

<IDScreen>:
    name: "ID_Screen"
    BG:
        MyBtn:
            id: btn_blink
            text: "Blink"
            pos_hint: {'x':.1, 'y':.1}
            on_press: root.onCameraClick()
        MyBtn:
            id: btn_IDScreen_next
            text: "NEXT"
            pos_hint: {'x':.7, 'y':.1}
            on_release: app.root.current = "Passport_Screen"
        Label:
            id: lbl_blink
            canvas.before:
                Color:
                    rgba: 1,1,1,1
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height
            text: "Click on the BLINK button and look at the camera. Blink your eyes and let the camera capture your picture and display on the screen"
            font_size: 20
            text_size: self.size
            halign: 'center'
            valign: 'center'
            size_hint: (.7, .6)
            pos_hint: {'center_x':0.5, 'y':.3}
        Image:
            id: img_blink
            opacity: 0
            size_hint: (.7, .6)
            pos_hint: {'center_x':0.5, 'y':.3}
<PassportScreen>:
    name: "Passport_Screen"
    BG:
        FieldName:
            id: lbl_Passport
            pos_hint: {'x':.1, 'y':.90}
            text: 'Passport Nationality'
        FieldInput:
            id: txt_Passport
            pos_hint: {'x':.45, 'y':.90}
        FieldName:
            id: lbl_Passport
            pos_hint: {'x':.1, 'y':.80}
            text: 'Select File'
        Button:
            id: btn_filebrowse
            text: "Browse"
            font_size: 14
            size_hint: (.1, .05)
            pos_hint: {'x':.45, 'y':.80}
            on_release: root.file_browse()
        FileChooserListView:
            id: file_passport
            on_selection: root.ImageSelect(file_passport.selection)
            size_hint: (.5, .5)
            pos_hint: {'x':0.45, 'y':.3}
            opacity: 0
        Image:
            id: img_passport
            source: ""
            size_hint: (.7, .6)
            pos_hint: {'center_x':0.5, 'y':.15}
            opacity: 0
        MyBtn:
            border: 1,1,1,1
            id: btn_PassportScreen_previous
            text: "PREVIOUS"
            pos_hint: {'x':.1, 'y':.02}
            on_release: app.root.current = "ID_Screen"
        MyBtn:
            id: btn_PassportScreen_next
            text: "MAIN"
            pos_hint: {'x':.7, 'y':.02}
            on_release: app.root.current = "Main_Screen"
    
