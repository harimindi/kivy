
ScreenManagement:
    MainScreen:
    IDScreen:
    PassportScreen:

<FieldName@Label>:
    #background_color:
    canvas.before:
        Color:
            rgba: 1,1,1,1
        #Line:
            #width: 2
            #color: 1,1,1,1
            #rectangle: self.x, self.y, self.width, self.height
        RoundedRectangle:
            pos: self.pos
            size: self.size
    color: 0,0,0,1
    font_size: 20
    size_hint: (.3, .05)
<FieldInput@TextInput>:
    background: 1., 1., 1., 1.
    font_size: 14
    multiline: False
    size_hint: (.4, .05)
<btn@Button>:
    background_normal: ""
    background_color: 0,0,0,0
    canvas.before:
        Color:
            rgba: (0,0.5,0.4,1) if self.state == 'normal' else (0.8,0.6,0,1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [30,]
    
    size_hint: (.25, .1)
    color: 1,1,1,1
    font_size: 20
<MainScreen>:
    name: "Main_Screen"
    canvas:
        Color: 
            rgba: (0.48, .09, 0.32, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    
    FloatLayout:
        size: root.size
        FieldName:
            id: lbl_FirstName
            pos_hint: {'x':.1, 'y':.85}
            text: 'First Name'
        FieldName:
            id: lbl_LastName
            pos_hint: {'x':.1, 'y':.75}
            text: 'Last Name'
        FieldName:
            id: lbl_DOB
            pos_hint: {'x':.1, 'y':.65}
            text: 'Date of Birth'
        FieldName:
            id: lbl_ID1
            pos_hint: {'x':.1, 'y':.45}
            text: 'Passport Number'
        FieldName:
            id: lbl_Nationality
            pos_hint: {'x':.1, 'y':.55}
            text: 'Nationality'
        FieldName:
            id: lbl_ID2
            pos_hint: {'x':.1, 'y':.35}
            text: 'Address'                    
        FieldInput:
            id: txt_FirstName
            pos_hint: {'x':.45, 'y':.85}
        FieldInput:
            id: txt_LastName
            pos_hint: {'x':.45, 'y':.75}
        FieldInput:
            id: txt_DOB
            pos_hint: {'x':.45, 'y':.65}
        FieldInput:
            id: txt_PassportNum
            pos_hint: {'x':.45, 'y':.55}   
        FieldInput:
            id: txt_Nationality
            pos_hint: {'x':.45, 'y':.45}
        FieldInput:
            id: txt_Address
            pos_hint: {'x':.45, 'y':.25}
            size_hint: (.4, .15)
        btn:
            id: btn_MainScreen_next
            text: "NEXT"
            pos_hint: {'x':.30, 'y':.10}
            on_release: app.root.current = "ID_Screen"
#<DatePicker>:
    #pHint: .5, .5
<IDScreen>:
    name: "ID_Screen"
    canvas:
        Color: 
            rgba: (0.48, .09, 0.32, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        size: root.size        
    Image:
        id: img_IDScreen
        size: 20,30
    btn:
        border: 1,1,1,1
        id: btn_blink
        text: "Blink"
        pos_hint: {'x':.1, 'y':.2}
        on_press: root.onCameraClick()
    btn:
        id: btn_IDScreen_next
        text: "NEXT"
        pos_hint: {'x':.7, 'y':.2}
        on_release: app.root.current = "Passport_Screen"
<PassportScreen>:
    name: "Passport_Screen"
    FloatLayout:
        size: root.size
        FieldName:
            id: lbl_Passport
            pos_hint: {'x':.1, 'y':.85}
            text: 'Passport Nationality'
        FieldInput:
            id: txt_Passport
            pos_hint: {'x':.45, 'y':.85}
        Image:
            id: img_PassportScreen
            size: 20,30
        btn:
            border: 1,1,1,1
            id: btn_PassportScreen_previous
            text: "PREVIOUS"
            pos_hint: {'x':.1, 'y':.2}
            on_release: app.root.current = "ID_Screen"
        btn:
            id: btn_PassportScreen_next
            text: "MAIN"
            pos_hint: {'x':.7, 'y':.2}
            on_release: app.root.current = "Main_Screen"
    
