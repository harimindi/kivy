ScreenManagement:
    MainScreen:
    BlinkPhoto:
    IDSelect:
    PassportScreen:
    UKDL:
    Result:
<BG@FloatLayout>:
    canvas:
        Color: 
            rgba: (0.48, .09, 0.32, 1)
        Rectangle:
            pos: self.pos
            size: self.size   
<FieldName@Label>:
    #background_color:
    canvas.before:
        Color:
            rgba: 1,1,1,1
        #Line:
            #width: 2
            #color: 1,1,1,1
            #rectangle: self.x, self.y, self.width, self.height
        RoundedRectangle:
            pos: self.pos
            size: self.size
    color: 0,0,0,1
    font_size: 20
    size_hint: (.3, .05)
<LblRes@Label>:
    canvas.before:
        Color: 
            rgba: 1,1,1,1
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height
    text_size: self.size
    size_hint: (.6,.05)
    color: 1,1,1,1
    font_size:15
    halign: 'center'
    valign: 'center'
<FieldInput@TextInput>:
    background: 1., 1., 1., 1.
    font_size: 14
    multiline: False
    size_hint: (.4, .05)
<MyBtn@Button>:
    background_normal:
    background_color: 0,0,0,0
    canvas.before:
        Color:
            rgba: (0,0.5,0.4,1) if self.state == 'normal' else (0.8,0.6,0,1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [30,]
    size_hint: (.25, .1)
    color: 1,1,1,1
    font_size: 20
#<DatePicker>:
    #pHint: .5, .5
<MainScreen>:
    name: "Main_Screen"
    BG:
        FieldName:
            id: lbl_FirstName
            pos_hint: {'x':.1, 'y':.85}
            text: 'First Name'
        FieldName:
            id: lbl_LastName
            pos_hint: {'x':.1, 'y':.75}
            text: 'Last Name'
        FieldName:
            id: lbl_DOB
            pos_hint: {'x':.1, 'y':.65}
            text: 'Date of Birth'
        FieldName:
            id: lbl_ID1
            pos_hint: {'x':.1, 'y':.45}
            text: 'Passport Number'
        FieldName:
            id: lbl_Nationality
            pos_hint: {'x':.1, 'y':.55}
            text: 'Nationality'
        FieldName:
            id: lbl_ID2
            pos_hint: {'x':.1, 'y':.35}
            text: 'Address'                    
        FieldInput:
            id: txt_FirstName
            pos_hint: {'x':.45, 'y':.85}
        FieldInput:
            id: txt_LastName
            pos_hint: {'x':.45, 'y':.75}
        FieldInput:
            id: txt_DOB
            pos_hint: {'x':.45, 'y':.65}
        FieldInput:
            id: txt_PassportNum
            pos_hint: {'x':.45, 'y':.55}   
        FieldInput:
            id: txt_Nationality
            pos_hint: {'x':.45, 'y':.45}
        FieldInput:
            id: txt_Address
            pos_hint: {'x':.45, 'y':.25}
            size_hint: (.4, .15)
        MyBtn:
            id: btn_MainScreen_next
            text: "NEXT"
            pos_hint: {'x':.30, 'y':.02}
            on_release: app.root.current = "Photo_Screen"

<BlinkPhoto>:
    name: "Photo_Screen"
    BG:
        MyBtn:
            id: btn_IDScreen_next
            text: "BACK"
            pos_hint: {'x':.1, 'y':.02}
            on_release: app.root.current = "Main_Screen"
        MyBtn:
            id: btn_blink
            text: "Blink"
            pos_hint: {'x':.4, 'y':.02}
            on_press: root.onCameraClick()
        MyBtn:
            id: btn_IDScreen_next
            text: "NEXT"
            pos_hint: {'x':.7, 'y':.02}
            on_release: app.root.current = "IDSelect_Screen"
        Label:
            id: lbl_blink
            canvas.before:
                Color:
                    rgba: 1,1,1,1
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height
            text: "Click on the BLINK button and look at the camera. Blink your eyes and let the camera capture your picture and display on the screen"
            font_size: 20
            text_size: self.size
            halign: 'center'
            valign: 'center'
            size_hint: (.7, .6)
            pos_hint: {'center_x':0.5, 'y':.3}
        Image:
            id: img_blink
            opacity: 0
            size_hint: (.7, .6)
            pos_hint: {'center_x':0.5, 'y':.3}
<IDSelect>:
    name: 'IDSelect_Screen'
    BG:
        Label:
            id: lbl_idselect1
            canvas.before:
                Color:
                    rgba: 1,1,1,1
                Line:
                    width: 1.5
                    rectangle: self.x, self.y, self.width, self.height
            text: 'Select an option from below to provide Photo ID document'
            text_size: cm(6), None
            halign: 'justify'
            valign: 'center'
            pos_hint: {'x':.3, 'y':.8}
            size_hint: (.4, .1)
        
        FieldName:
            id: lbl_IDSelected
            text_size: cm(6), None
            halign: 'center'
            valign: 'center'
            pos_hint: {'x':.35, 'y':.2}
            size_hint: (.3, .06)
            font_size: 15
            opacity: 0
        Button:
            id: btn_UKPassport
            text: 'UK Passport'
            pos_hint: {'x':.35, 'y':.55}
            size_hint: (.3, .05)
            on_press: root.Selection(self.text)
        Button:
            id: btn_UKDL
            text: 'UK Driving License'
            pos_hint: {'x':.35, 'y':.50}
            size_hint: (.3, .05)
            on_press: root.Selection(self.text)
        Button:
            id: btn_NationalID
            text: 'National ID Card'
            pos_hint: {'x':.35, 'y':.45}
            size_hint: (.3, .05)
            on_press: root.Selection(self.text)
        Button:
            id: btn_NonUKPassport
            text: 'Non UK Passport'
            pos_hint: {'x':.35, 'y':.4}
            size_hint: (.3, .05)
            on_press: root.Selection(self.text)
            
        MyBtn:
            id: btn_blink
            text: "BACK"
            pos_hint: {'x':.1, 'y':.02}
            on_press: app.root.current = "Photo_Screen"
        MyBtn:
            id: btn_IDScreen_next
            text: "NEXT"
            pos_hint: {'x':.7, 'y':.02}
            on_release: root.idDocument()
            #on_release: app.root.current = "Passport_Screen"
<PassportScreen>:
    name: "Passport_Screen"
    BG:
        FieldName:
            id: lbl_Passport
            pos_hint: {'x':.1, 'y':.90}
            text: 'Passport Nationality'
        FieldInput:
            id: txt_Passport
            pos_hint: {'x':.45, 'y':.90}
        FieldName:
            id: lbl_Passport
            pos_hint: {'x':.1, 'y':.80}
            text: 'Select File'
        Button:
            id: btn_filebrowse
            text: "Browse"
            font_size: 14
            size_hint: (.1, .05)
            pos_hint: {'x':.45, 'y':.80}
            on_release: root.file_browse()
        FileChooserListView:
            id: file_passport
            path: 'C:/Hari Docs'
            on_selection: root.ImageSelect(file_passport.selection)
            size_hint: (.5, .5)
            pos_hint: {'x':0.45, 'y':.3}
            opacity: 0
        Image:
            id: img_passport
            source: ""
            size_hint: (.7, .6)
            pos_hint: {'center_x':0.5, 'y':.15}
            opacity: 0
        MyBtn:
            border: 1,1,1,1
            id: btn_PassportScreen_previous
            text: "BACK"
            pos_hint: {'x':.1, 'y':.02}
            on_release: app.root.current = "IDSelect_Screen"
        MyBtn:
            id: btn_PassportScreen_next
            text: "NEXT"
            pos_hint: {'x':.7, 'y':.02}
            on_release: app.root.current = "Result_Screen"
<UKDL>:
    name: 'ukdl_Screen'
    BG:
        FieldName:
            id: lbl_ukdl
            pos_hint: {'x':.1, 'y':.80}
            text: 'Select File'
        Button:
            id: btn_ukdlfilebrowse
            text: "Browse"
            font_size: 14
            size_hint: (.1, .05)
            pos_hint: {'x':.45, 'y':.80}
            on_release: root.file_browse()
        FileChooserListView:
            id: file_ukdl
            path: 'C:/hari Docs'
            on_selection: root.ukdlSelect(file_ukdl.selection)
            size_hint: (.5, .5)
            pos_hint: {'x':0.45, 'y':.3}
            opacity: 0
        Image:
            id: img_ukdl
            source: ""
            size_hint: (.7, .6)
            pos_hint: {'center_x':0.5, 'y':.15}
            opacity: 0
        MyBtn:
            border: 1,1,1,1
            id: btn_ukdlscreen_previous
            text: "BACK"
            pos_hint: {'x':.1, 'y':.02}
            on_release: app.root.current = "IDSelect_Screen"
        MyBtn:
            id: btn_ukdlscreen_next
            text: "NEXT"
            pos_hint: {'x':.7, 'y':.02}
            on_release: app.root.current = "Result_Screen"
<Result>:
    name: "Result_Screen"
    on_enter: root.displaydata()
    BG:
        GridLayout:
            cols: 2
            size_hint: (.8,.7)
            pos_hint: {'x':.1, 'y':.2}
            spacing: 20
            LblRes:
                id: lbl_facematch
                text: "Passport Photo Match:"
            TextInput:
                id: txt_facematch
            LblRes:
                id: lbl_countryissue
                text: "Country of Issue:"
            TextInput:
                id: txt_countryissue
            LblRes:
                id: lbl_lastname
                text: "Last Name:"
            TextInput:
                id: txt_lastname
            LblRes:
                id: lbl_givenname
                text: "Given Name:"
            TextInput:
                id: txt_givenname
            LblRes:
                id: lbl_passportnum
                text: "Passport Number:"
            TextInput:
                id: txt_passportnum
            LblRes:
                id: lbl_nationality
                text: "Nationality:"
            TextInput:
                id: txt_nationality
            LblRes:
                id: lbl_dob
                text: "Date of Birth:"
            TextInput:
                id: txt_dob
            LblRes:
                id: lbl_sex 
                text: "Male / Female:"
            TextInput:
                id: txt_sex
            LblRes:
                id: lbl_doe
                text: "Date of Expiry:"
            TextInput:
                id: txt_doe
    
        MyBtn:
            id: btn_PassportScreen_next
            text: "EXIT"
            pos_hint: {'x':.7, 'y':.02}
            on_release: App.get_running_app().stop()
        MyBtn:
            id: btn_PassportScreen_back
            text: "BACK"
            pos_hint: {'x':.3, 'y':.02}
            on_release: app.root.current = "Passport_Screen"
